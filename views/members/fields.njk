<div class="item">
            <div>Avatar URL</div>
            <div>
                <input type="url" name="avatar_url" placeholder="http://" value=" {{ member.avatar_url }} ">
            </div>
        </div>

        <div class="item">
            <div>Name</div>
            <div>
                <input type="text" name="name" placeholder="Name of member" value=" {{ member.name }} ">
            </div>
        </div>

        <div class="item">
            <div>E-mail</div>
            <div>
                <input type="email" name="email" placeholder="E-mail of member" value=" {{ member.name }} ">
            </div>
        </div>

        <div class="item">
            <div>Date of birth</div>
            <div>
                <input type="date" name="birth" value="{{ member.birth }}">
            </div>
        </div>

        <div class="item">
            <div>Gender</div>
            <div>
                <span><input type="radio" name="gender" value="M" {% if member.gender == "M"%} checked {% endif %}> Male</span>
                <span><input type="radio" name="gender" value="F" {% if member.gender == "F"%} checked {% endif %}> Female</span>
            </div>
        </div>

        <div class="item">
            <div>Type of blood</div>
            <div>
                <select name="blood">
                    <option value="A1" {% if member.blood == "A1" %} selected {% endif %}>A+</option>
                    <option value="A0" {% if member.blood == "A0" %} selected {% endif %}>A-</option>
                    <option value="B1" {% if member.blood == "B1" %} selected {% endif %}>B+</option>
                    <option value="B0" {% if member.blood == "B0" %} selected {% endif %}>B-</option>
                    <option value="AB1" {% if member.blood == "AB1" %} selected {% endif %}>AB+</option>
                    <option value="AB0" {% if member.blood == "AB0" %} selected {% endif %}>AB-</option>
                    <option value="O1" {% if member.blood == "O1" %} selected {% endif %}>O+</option>
                    <option value="O0" {% if member.blood == "O0" %} selected {% endif %}>O-</option>
                </select>
            </div>
        </div>

        <div class="item">
            <div>Weight (KG)</div>
            <div>
                <input type="number" name="weight" placeholder="Weight of member" value="{{ member.weight }}">
            </div>
        </div>

        <div class="item">
            <div>Heigth (Cm)</div>
            <div>
                <input type="number" name="heigth" placeholder="Heigth of member" value="{{ member.heigth }}">
            </div>
        </div>

        <button type="submit">Salvar</button>